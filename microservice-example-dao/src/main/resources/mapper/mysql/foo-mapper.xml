<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.charlie.example.dao.FooDao">

    <resultMap id="fooMap" type="org.charlie.example.po.entities.FooPo">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
    </resultMap>

    <select id="selectFoos" resultType="org.charlie.example.po.entities.FooPo" resultMap="fooMap" parameterType="org.charlie.example.po.entities.FooPo">
        select id, name from foo
        <where>
            <if test="id != null">
                id=#{id,jdbcType=INTEGER}
            </if>
        </where>
    </select>

    <insert id="insertFoo" parameterType="org.charlie.example.po.entities.FooPo">
        insert into foo (
            id,
            name
        ) values (
            #{id,jdbcType=INTEGER},
            #{name,jdbcType=VARCHAR}
         )
    </insert>

    <update id="updateFoo" parameterType="org.charlie.example.po.entities.FooPo">
        update foo
        <set>
            <if test="name != null">name=#{name,jdbcType=VARCHAR}</if>
        </set>
        where
            id=#{id,jdbcType=INTEGER}
    </update>

    <delete id="deleteFoo" parameterType="org.charlie.example.po.entities.FooPo">
        delete from foo
        where
            id=#{id,jdbcType=INTEGER}
    </delete>

</mapper>